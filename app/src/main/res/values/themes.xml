<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AlphaKids" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
<!--        <item name="colorPrimaryVariant">@color/primaryVariant</item>-->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primaryContainer</item>
<!--        <item name="colorOnPrimaryContainer">@color/onPrimaryContainer</item>-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/onSecondaryContainer</item>
        <!--    Surface color    -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <item name="colorSurfaceVariant">@color/surfaceVariant</item>
        <item name="colorSurfaceContainer">@color/surfaceContainer</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryContainer</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorSecondaryVariant">@color/soft_green</item>
        <item name="colorOnSurfaceVariant">@color/shrine_theme_light_onSurfaceVariant</item>

    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/cherrybomb</item>
    </style>

    <style name="Theme.AlphaKids" parent="Base.Theme.AlphaKids" >
